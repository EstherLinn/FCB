@using Feature.Wealth.Component.Models.LongCards
@model LongCardsModel

@if (Model == null)
{
    return;
}

<section class="c-section" data-aos="fade-up" data-aos-once="true">
    <div class="l-wrap">
        <div class="c-section__content">
            <div class="l-feature l-feature--sm">
                <ul class="l-feature__list">
                    <li class="l-feature__item">
                        <div class="c-feature c-feature--join c-feature--personalize">
                            <div class="c-feature__content u-center">
                                <h3 class="c-feature__title">@Html.Sitecore().Field(Templates.LongCards.Fields.MainTitle.ToString(), Model.Item)</h3>
                                <p class="c-feature__desc">@Html.Sitecore().Field(Templates.LongCards.Fields.Description.ToString(), Model.Item)</p>
                                <div class="c-feature__actions">
                                    <a href="@Model.ButtonLink" class="o-btn o-btn--primary o-btn--flat o-btn--sm">@Html.Sitecore().Field(Templates.LongCards.Fields.ButtonText.ToString(), Model.Item)</a>
                                </div>
                            </div>
                            <div class="c-feature__plate">
                                <img src="@Model.ImageUrl" srcset="" alt="" class="c-feature__img">
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
@using Feature.Wealth.Component.Models.GlobalIndex
@model GlobalIndex

<tr>
    <td>
        <a href="@Model.DetailLink" class="o-contentLink" target="_blank">@Model.IndexNameHtmlString</a>
    </td>
    <td>
        @Model.MarketPriceText<br><span class="t-date">@Model.DataDate</span>
    </td>
    <td>
        @if (Model.UpOrDown)
        {
            if (Model.Change == "0.00")
            {
                <span>@Model.Change</span>
            }
            else
            {
                <span class="o-rise">@Model.Change</span>
            }            
        }
        else
        {
            <span class="o-fall">@Model.Change.Replace("-", "")</span>
        }
    </td>
    <td>
        @if (Model.UpOrDown)
        {
            if (Model.ChangePercentage == "0.00%")
            {
                <span>@Model.ChangePercentage</span>
            }
            else
            {
                <span class="o-rise">@Model.ChangePercentage</span>
            }            
        }
        else
        {
            <span class="o-fall">@Model.ChangePercentage.Replace("-", "")</span>
        }
    </td>
</tr>
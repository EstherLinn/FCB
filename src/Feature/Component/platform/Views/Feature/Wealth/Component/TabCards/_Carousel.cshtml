@using Feature.Wealth.Component.Models.TabCards
@model Feature.Wealth.Component.Models.TabCards.TabCardsModel

<div class="l-trend__slider">
	<!-- .u-shadow-animation: hover時陰影特效 -->
	<div class="swiper c-swiper c-swiper--trend u-shadow-animation" data-carousel="true">
		<div class="swiper-wrapper c-swiper__wrapper">
			@if (!string.IsNullOrEmpty(Model.BannerLink1) || !string.IsNullOrEmpty(Model.ImageUrl1) || !string.IsNullOrEmpty(Model.Title1) || !string.IsNullOrEmpty(Model.Description1))
			{
				<div class="swiper-slide c-swiper__slide">
					<a href="@Model.BannerLink1" class="c-banner c-banner--trend c-banner--zoom">

						<img src="@Model.ImageUrl1" class="c-banner__img" loading="lazy" alt="">

						@{
							var fontcolor1 = Model.IsBlackFont1 == true ? null : "c-banner__content--wt";
						}

						<div class="swiper-lazy-preloader swiper-lazy-preloader-white"></div>

						<div class="c-banner__content @fontcolor1">
							<h3 class="c-banner__title">@Model.Title1 </h3>
							<p class="c-banner__slogan">@Model.Description1</p>
						</div>
					</a>
				</div>
			}

			@if (!string.IsNullOrEmpty(Model.BannerLink2) || !string.IsNullOrEmpty(Model.ImageUrl2) || !string.IsNullOrEmpty(Model.Title2) || !string.IsNullOrEmpty(Model.Description2))
			{
				<div class="swiper-slide c-swiper__slide">
					<a href="@Model.BannerLink2" class="c-banner c-banner--trend c-banner--zoom">

						<img src="@Model.ImageUrl2" class="c-banner__img" loading="lazy" alt="">

						@{
							var fontcolor2 = Model.IsBlackFont2 == true ? null : "c-banner__content--wt";
						}

						<div class="swiper-lazy-preloader swiper-lazy-preloader-white"></div>

						<div class="c-banner__content @fontcolor2">
							<h3 class="c-banner__title">@Model.Title2</h3>
							<p class="c-banner__slogan">@Model.Description2</p>
						</div>
					</a>
				</div>
			}

			@if (!string.IsNullOrEmpty(Model.BannerLink3) || !string.IsNullOrEmpty(Model.ImageUrl3) || !string.IsNullOrEmpty(Model.Title3) || !string.IsNullOrEmpty(Model.Description3))
			{
				<div class="swiper-slide c-swiper__slide">
					<a href="@Model.BannerLink3" class="c-banner c-banner--trend c-banner--zoom">

						<img src="@Model.ImageUrl3" class="c-banner__img" loading="lazy" alt="">

						@{
							var fontcolor3 = Model.IsBlackFont3 == true ? null : "c-banner__content--wt";
						}
						<div class="c-banner__content @fontcolor3">
							<h3 class="c-banner__title">@Model.Title3 </h3>
							<p class="c-banner__slogan">@Model.Description3</p>
						</div>
					</a>
				</div>
			}

		</div>
		<div class="swiper-button-next c-swiper__next"></div>
		<div class="swiper-button-prev c-swiper__prev"></div>
		<div class="swiper-pagination c-swiper__pagination"></div>
	</div>
</div>
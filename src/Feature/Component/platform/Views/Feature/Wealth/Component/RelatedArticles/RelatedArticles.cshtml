@model Feature.Wealth.Component.Models.RelatedArticles.RelatedArticlesModel
@using Feature.Wealth.Component.Models.ArticleCardList
@using Foundation.Wealth.Helper

@if (Model == null || !Model.CardList.Any())
{
    return;
}

<section class="c-section">
    <div class="l-wrap">
        <section class="c-section">
            @if (!string.IsNullOrEmpty(Model.MainTitle))
            {
                <div class="c-section__title">@Model.MainTitle</div>
            }

            <div class="c-section__content">
                <div class="l-flex u-flex-col@lt u-flex-gap-xl u-flex-gap-sm@lt" relatedArticles>
                    @foreach (var item in Model.CardList)
                    {
                        <div class="l-flex__item">

                            <a href="@item.Link" class="c-box c-box--gapless u-shadow-animation" target="@item.LinkTarget" title="@item.LinkTitle">
                                <div class="c-box c-box--gapless u-shadow-animation">
                                    <div class="c-gridview c-gridview--list@lt">
                                        @if (!string.IsNullOrEmpty(item.PCImage) && !string.IsNullOrEmpty(item.MobileImage))
                                        {
                                            <div class="c-gridview__media c-gridview__media--sm">
                                                <picture>
                                                    <source media="(min-width: 1200px)" srcset="@item.PCImage" />
                                                    <source media="(max-width: 1199px)" srcset="@item.MobileImage" />
                                                    <img src="@item.PCImage" class="c-gridview__img" alt="女性財務焦慮感高於男性？富達：三步驟翻轉「投資好難」盲點">
                                                </picture>
                                            </div>
                                        }

                                        <div class="c-gridview__content">

                                            @if (!string.IsNullOrEmpty(item.Title))
                                            {
                                                <div class="c-gridview__main">
                                                    <div class="c-gridview__title s3@dt-only u-ellipsis-2 u-ellipsis-3@mb-only u-line-2@dt-only">@item.Title</div>
                                                </div>
                                            }

                                            <div class="c-gridview__minor">
                                                <div class="c-minorInfo s4">
                                                    <div class="c-minorInfo__main">

                                                        @if (!string.IsNullOrEmpty(item.Date))
                                                        {
                                                            <span class="t-date">@item.Date</span>
                                                        }

                                                    </div>
                                                    <div class="c-minorInfo__view">

                                                        @if (!string.IsNullOrEmpty(item.ViewCount))
                                                        {
                                                            <span class="o-views o-views--xs">@item.ViewCount</span>
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>

                        </div>
                    }
                </div>
            </div>
        </section>
    </div>
</section>
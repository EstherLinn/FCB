@model Feature.Wealth.Component.Models.SiteProductSearch.SiteProductSearchDatasource

<script id="uid-template-fstock" type="text/html">
    <tr class="c-cardTable__item u-nowrap@dt-only u-center@dt-only">
        <td class="c-cardTable__top"></td>
        @*【股票名稱】*@
        <td class="c-cardTable__header u-wrap@dt-only u-left@dt-only">
            <div class="c-cardTable__content">
                <div class="l-target">
                    <div class="l-target__name">
                        <a href="@(Model.ForeignStockDetailPageLink)?id=<%= FirstBankCode %>" class="o-contentLink t-bold u-ellipsis-2" target="_blank"><%= FirstBankCode %> <%= ChineseName %> <%= EnglishName %></a>
                    </div>
                    @*標籤*@
                    <% if (DiscountTags != null && DiscountTags.length > 0) { %>
                    <div class="l-target__additional">
                        <ul class="l-tag">
                            <% for (var i = 0; i < DiscountTags.length; i++) { %>
                            <li class="l-tag__item">
                                <span class="o-tag"><%= DiscountTags[i] %></span>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                    <% } %>
                </div>
            </div>
        </td>
        <td class="c-cardTable__space"></td>
        @*【交易所代碼】*@
        <td class="c-cardTable__body" data-card-table-width="1/2">
            <!-- [data-length]: 設定轉換成卡片時，標題的寬度，單位為字數em，範圍1~5字 -->
            <div class="c-cardTable__title" data-length="5">交易所代碼</div>
            <div class="c-cardTable__content"><%= FundCodePair.Value %></div>
        </td>
        @*【收盤價(收盤日)】*@
        <td class="c-cardTable__body" data-card-table-width="1/2">
            <!-- [data-length]: 設定轉換成卡片時，標題的寬度，單位為字數em，範圍1~5字 -->
            <div class="c-cardTable__title" data-length="4">收盤價<br>(收盤日)</div>
            <div class="c-cardTable__content"><%= ClosingPrice.Value %><br><span class="t-date"><%= DataDate %></span></div>
        </td>
        @*【一日報酬】*@
        <td class="c-cardTable__body" data-card-table-width="1/2">
            <div class="c-cardTable__title" data-length="5">1日績效</div>
            <div class="c-cardTable__content">
                <% if (DailyReturn.Value != null) { %>
                <% if (DailyReturn.Key) { %>
                <span class="o-rise"><%= DailyReturn.Text %>%</span>
                <% } else { %>
                <span class="o-fall"><%= DailyReturn.Text %>%</span>
                <% } %>
                <% } else {%>
                <span>-</span>
                <% } %>
            </div>
        </td>
        @*【一週報酬】*@
        <td class="c-cardTable__body" data-card-table-width="1/2">
            <div class="c-cardTable__title" data-length="4">1週績效</div>
            <div class="c-cardTable__content">
                <% if (WeeklyReturn.Value != null) { %>
                <% if (WeeklyReturn.Key) { %>
                <span class="o-rise"><%= WeeklyReturn.Text %>%</span>
                <% } else { %>
                <span class="o-fall"><%= WeeklyReturn.Text %>%</span>
                <% } %>
                <% } else {%>
                <span>-</span>
                <% } %>
            </div>
        </td>
        @*【一個月報酬】*@
        <td class="c-cardTable__body" data-card-table-width="1/2">
            <div class="c-cardTable__title" data-length="5">1月績效</div>
            <div class="c-cardTable__content">
                <% if (MonthlyReturn.Value != null) { %>
                <% if (MonthlyReturn.Key) { %>
                <span class="o-rise"><%= MonthlyReturn.Text %>%</span>
                <% } else { %>
                <span class="o-fall"><%= MonthlyReturn.Text %>%</span>
                <% } %>
                <% } else {%>
                <span>-</span>
                <% } %>
            </div>
        </td>
        @*【三個月報酬】*@
        <td class="c-cardTable__body" data-card-table-width="1/2">
            <div class="c-cardTable__title" data-length="4">1季績效</div>
            <div class="c-cardTable__content">
                <% if (ThreeMonthReturn.Value != null) { %>
                <% if (ThreeMonthReturn.Key) { %>
                <span class="o-rise"><%= ThreeMonthReturn.Text %>%</span>
                <% } else { %>
                <span class="o-fall"><%= ThreeMonthReturn.Text %>%</span>
                <% } %>
                <% } else {%>
                <span>-</span>
                <% } %>
            </div>
        </td>
        @*【一年報酬】*@
        <td class="c-cardTable__body" data-card-table-width="1/2">
            <div class="c-cardTable__title" data-length="5">1年績效</div>
            <div class="c-cardTable__content">
                <% if (OneYearReturn.Value != null) { %>
                <% if (OneYearReturn.Key) { %>
                <span class="o-rise"><%= OneYearReturn.Text %>%</span>
                <% } else { %>
                <span class="o-fall"><%= OneYearReturn.Text %>%</span>
                <% } %>
                <% } else {%>
                <span>-</span>
                <% } %>
            </div>
        </td>

        <td class="c-cardTable__space"></td>
        <td class="c-cardTable__footer" data-card-table-width="<%= CanOnlineSubscription == true ? '2/3' : '1/1' %>">
            <div class="c-cardTable__content">
                <ul class="l-collect l-collect--divider@lt">
                    <li class="l-collect__item">
                        <%= FocusButtonHtml %>
                    </li>
                </ul>
            </div>
        </td>
        <td class="c-cardTable__footer" data-card-table-width="1/3">
            <div class="c-cardTable__content">
                <% if(CanOnlineSubscription) { %>
                <%= SubscribeButtonHtml %>
                <% } %>
            </div>
        </td>
    </tr>
</script>